{
  "name": "transaction-processing-engine",
  "version": "2.0.0",
  "description": "Advanced Transaction Processing Engine with intelligent exchange routing and real-time streaming",
  "main": "dist/core/index.js",
  "scripts": {
    "dev": "tsx watch src/core/bootstrap.ts",
    "build": "tsc",
    "start": "npx prisma migrate deploy && node dist/core/bootstrap.js",
    "postinstall": "prisma generate",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "load:test": "tsx scripts/load-test.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:push": "prisma db push",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:setup": "bash scripts/setup-docker.sh",
    "setup": "npm install && npx prisma generate",
    "setup:full": "npm install && npx prisma generate && npx prisma migrate dev",
    "clean": "rimraf dist coverage node_modules/.cache"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "order-execution",
    "dex",
    "websocket",
    "solana",
    "typescript",
    "fastify",
    "bullmq"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/websocket": "^10.0.1",
    "@prisma/client": "^5.7.1",
    "@types/ws": "^8.18.1",
    "bullmq": "^5.1.7",
    "dotenv": "^16.3.1",
    "fastify": "^4.25.2",
    "ioredis": "^5.3.2",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "ws": "^8.18.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@swc/core": "^1.3.102",
    "@swc/jest": "^0.2.29",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "prisma": "^5.7.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
