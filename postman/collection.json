    {
      "name": "Execute Market Order - SOL to USDC",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tokenIn\": \"SOL\",\n  \"tokenOut\": \"USDC\",\n  \"amount\": 1.5,\n  \"slippage\": 0.01\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/orders/execute",
          "host": ["{{baseUrl}}"],
          "path": ["api", "orders", "execute"]
        },
        "description": "Submit a market order to swap 1.5 SOL for USDC with 1% slippage tolerance"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test(\"Response has orderId\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('orderId');",
              "    pm.expect(jsonData.orderId).to.match(/^ord_/);",
              "});",
              "",
              "pm.test(\"Status is pending\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.status).to.eql('pending');",
              "});",
              "",
              "// Save orderId for future requests",
              "pm.environment.set(\"lastOrderId\", pm.response.json().orderId);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
