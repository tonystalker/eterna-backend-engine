        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Has queue stats\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('queue');",
              "    pm.expect(jsonData.queue).to.have.property('waiting');",
              "    pm.expect(jsonData.queue).to.have.property('active');",
              "    pm.expect(jsonData.queue).to.have.property('completed');",
              "});",
              "",
              "pm.test(\"Has websocket stats\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('websocket');",
              "});"
            ],
